@model PaymentRecordCreateViewModel

@{
    ViewBag.Title = "Add New Payment Record";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">New Payment Record</li>
                </ol>
            </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-control">
                    <label asp-for="EmployeeId"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.employees">
                        <option selected>--select--</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger">
                    </span>
                </div>
                <br /><br />
                <div class="form-control">
                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PayMonth" class="form-control">
                            <option selected>-------select month ---</option>
                            <option>january</option>
                            <option>february</option>
                            <option>march</option>
                            <option>april</option>
                            <option>may</option>
                            <option>june</option>
                            <option>july</option>
                            <option>august</option>
                            <option>september</option>
                            <option>octomber</option>
                            <option>November</option>
                            <option>December</option>


                        </select>
                        <span asp-validation-for="PayMonth " class="text-danger">
                        </span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="TaxYearId"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TaxYearId" class="form-control" asp-items="ViewBag.taxyears">
                            <option selected>--select--</option>
                        </select>
                        <span asp-validation-for="TaxYearId" class="text-danger">
                        </span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>
                    <div class="form-control col-md-3">
                        <input asp-for="PayDate" class="form-control" />
                        <span asp-validation-for="PayDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>
                    <div class="form-control col-md-3">
                        <input asp-for="HourlyRate" class="form-control" placeholder="HourlyRate" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="HoursWorked"></label>
                    </div>
                    <div class="form-control col-md-3">
                        <input asp-for="HoursWorked" class="form-control" placeholder="HourlyRate" />
                        <span asp-validation-for="HoursWorked " class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>
                    <div class="form-control col-md-3">
                        <input asp-for="ContractualHours" class="form-control" placeholder="HourlyRate" />
                        <span asp-validation-for="ContractualHours  " class="text-danger"></span>
                    </div>
                </div>
                <br /><br />



                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back to Paylist</a>
                    <br />
                    <br />
                    <br />

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}